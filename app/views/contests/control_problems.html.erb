<%= link_to '<i class="icon-arrow-left"></i> Back'.html_safe, contest_path(@contest.path)+'/control' %>
<br />
<br />

<%= form_tag(contest_path(@contest.path)+'/control_problems_count', :method => :put) do %>
  <div class="control-group">
    <%= label_tag :problems_count, "Problems count", :class => 'control-label' %>
    <div class="controls">
      <%= number_field_tag :problems_count, @contest.problems_count, :in => 0..200, :class => 'span1'%>
    </div>
  </div>

  <%= submit_tag 'Update', :class => "btn" %>
<% end %>

<div class="tabbable" style="background-color: white;">
  <ul class="nav nav-tabs" id="body-bgcolor">
    <li class="<%= 'active' if params[:tab]=='0' || params[:tab].nil? %>">
      <a href="#tab0" data-toggle="tab">Template</a>
    </li>

    <% for i in 1..@contest.problems_count %>
      <li class="<%='active'if params[:tab]==i.to_s %>" ><a href="#tab<%= i %>" data-toggle="tab"> <%= i %> </a></li>
    <% end %>
  </ul>

  <div class="tab-content" id="articles">
      <div class="tab-pane <%='active' if params[:tab]=='0' || params[:tab].nil? %>" id="tab0">
        <p>I'm Template</p>
        <% @problem = @contest.problems.find_by(order: 0) %>
        <%= render 'problems/form' %>      
      </div>

      <% for i in 1..@contest.problems_count %>
        <div class="tab-pane <%='active' if params[:tab]==i.to_s %>" id="tab<%= i %>" >
            <p>Howdy, I'm in Section "tab<%= i %>".</p>
            <% @problem = @contest.problems.find_by(order: i) %>
            <%= render 'problems/form' %>
        </div>
      <% end %>
      
  </div>
</div>

<br />