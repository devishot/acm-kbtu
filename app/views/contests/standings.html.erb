<%= render "contest" %>

<table class="table table-striped table-bordered table-hover table-condensed" >
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Submits</th>
      <th>Destroy participate</th>
    </tr>
  </thead>

  <tbody>
    <% @contest.participants.each do |participant| %>
      <tr>
        <td> <%= participant.path %> </td>
        <td> <%= participant.user.name %> </td>
        <td> 
          <%= link_to "View submits", "/submits/#{participant.contest.path}/#{participant.path}"%> 
        </td>
        <td> 
          <%= link_to "Kill", 
            kill_participate_path(:contest => participant.contest.id, :participant => participant.id),
            :method => :post,
            :confirm => 'Are you sure?'
          %> 
        </td>
      </tr>
    <% end %>
  </tbody>
</table>