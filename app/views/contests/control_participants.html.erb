<%= link_to '<i class="icon-arrow-left"></i> Back'.html_safe, contest_path(@contest.path)+'/control' %>
<br />
<br />

<center>
  <p> <%= @contest.title %> </p>
  <%= render 'contest_info' %>
</center>


<table class="table table-striped table-bordered table-hover table-condensed" >
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Submits</th>
      <th>Destroy participate</th>
        <% if @contest.confirm_participants == true %>
      <th>Confirm</th>
        <% end %>      
    </tr>
  </thead>

  <tbody>
    <% participants = (@contest.confirm_participants == false) ? @contest.participants : @contest.participants.sort{|x, y| if( x.confirmed? == y.confirmed?) then x.path <=> y.path elsif x.confirmed? then -1 else -1 end} %>
    <% participants.each do |participant| %>
      <tr>
        <td> <%= participant.path %> </td>
        <td> <%= participant.user.name %> </td>
        <td> 
          <%= link_to "View submits", "/submits/#{participant.contest.path}/#{participant.path}"%> 
        </td>
        <td> 
          <%= link_to "Kill", 
            kill_participant_path(:contest => participant.contest.id, :participant => participant.id),
            :method => :delete,
            :confirm => 'Are you sure?'
          %> 
        </td>
          <% if @contest.confirm_participants == true %>
        <td>
          <div class="switch switch-small confirm" <%="contest=#{@contest.path} id=#{participant.path}" %> >
            <input type="checkbox" <%= 'checked' if participant.confirmed %> >
          </div>
        </td>
          <% end %>        
      </tr>
    <% end %>
  </tbody>
</table>