<%= form_for(@contest, :url => @submit_path, :method => @submit_method) do |f| %>
  <% if @contest.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@contest.errors.count, "error") %> prohibited this contest from being saved:</h2>

      <ul>
      <% @contest.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :type, "Type of contest", :class => 'control-label' %>
    <div class="controls">
      <%= f.select(:type, options_for_select([['ACM', 0], ['IOI', 1]], 0)) %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :name, :class=>"control-label" %>
    <div class="controls">
      <%= f.text_field :name %>
    </div>
  </div>

  <div class="field">
    <%= f.label :description, :class=>"control-label" %>
    <div class="controls">
      <%= f.text_area :description, :rows => 5 %>
    </div>
  </div>

  <br />
  <div class="field">
    <%= f.label :time_start, "Start time", :class=>"control-label" %>
    <div class="controls">
      <%= f.datetime_select :time_start %>
    </div>
  </div>
  <br />

  <div class="field">
    <%= f.label :time_finish, "Finish time", :class=>"control-label" %>
    <div class="controls">
      <%= f.datetime_select :time_finish, :default => 5.hours.from_now %>
    </div>
  </div>
  <br />

  <div class="control-group">
    <%= f.label :problems_type, "Type of add of problems", :class => 'control-label' %>
    <div class="controls">
      <%= f.select(:problems_type, options_for_select([['One archive',0], ['Every problem',1]], 0)) %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :problems_count, "Number of problems", :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :problems_count, :in => 0..200 %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit :class => "btn" %>
  </div>
<% end %>
