<%= form_for(@contest, :url => @submit_path, :method => @submit_method) do |f| %>
  <% if @contest.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@contest.errors.count, "error") %> prohibited this contest from being saved:</h2>

      <ul>
      <% @contest.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <label class="checkbox inline">
      <%= f.label :type, 'ACM' %>
      <%= f.radio_button :type, 0 %>
    </label>
    <label class="checkbox inline">
      <%= f.label :type, 'IOI' %>
      <%= f.radio_button :type, 1, :disabled => true %>
    </label>
  </div>
  <br />

  <div class="control-group">
    <%= f.label :title, :class=>"control-label" %>
    <div class="controls">
      <%= f.text_field :title %>
    </div>
  </div>

  <div class="field">
    <%= f.label :description, :class=>"control-label" %>
    <div class="controls">
      <%= f.text_area :description, :rows => 5 %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit :class => "btn" %>
  </div>
<% end %>