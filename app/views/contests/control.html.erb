<%= link_to 'Destroy Contest', contest_path(@contest.path), 
  method: :delete, 
  data: { confirm: 'Are you sure?' },
  class: "btn btn-danger"
%>
<br />
<br />


<%= form_for(@contest, :url => contest_path(@contest.path)+'/control', :method => "PUT") do |f| %>
  <table class="table table-bordered" style="width: 500px">
    <tr>
      <td>
        <div style="position: relative; left: 150px;">
          <% if @contest.over? then %>
            <%= label_tag :duration, "Continue for" %>
          <% else %>
            <%= label_tag :duration, "Contest duration" %> 
          <% end %>
          <%= f.number_field :duration, :in => 5..30000000 %>
        </div>
        <br />
      </td>
    </tr>

    <tr style="text-align: center;">
      <td style="width: 250px">
        <p>Start time</p>
        <%= f.datetime_select :time_start %>
        <%= f.submit 'Update', :class => "btn" %>
      </td>
      <td>
        <br />
        <br />
        <center>OR<center>
      </td>
      <td style="width: 200px; text-align: center;">
        <% if not @contest.started? then %>
          <p>Start now</p>
          <%= f.submit 'Start', :class => "btn" %>
        <% elsif @contest.over? then %>
          <p>Continue or Restart now</p>
          <%= f.submit 'Continue', :class => "btn btn-block btn-primary" %>          
          <%= f.submit 'Restart', :class => "btn btn-block" %>
        <% else %>
          <p>Stop it</p>
          <%= f.submit 'Stop', :class => "btn btn-danger" %>
        <% end %>        
      </td>
    </tr>

    <tr>
      <td>
        <%= render 'contest_info' %>
      </td>
    </tr>

  </table>
<% end %>

<div class="btn-toolbar">
  <div class="btn-group">
    <%= link_to "Edit Problems", contest_path(@contest.path)+'/control_problems', 
        class: "btn" %>

    <%= link_to "Edit Participants", contest_path(@contest.path)+'/control_participants', 
        class: "btn" %>
  </div>
</div>
<br />


<%= link_to "Participants status", contest_path(@contest.path)+'/control_status', class: "btn" %>