<%= link_to '<i class="icon-arrow-left"></i> Back'.html_safe, contest_path(@contest.path) %>
<br />
<br />


<div class="well" style="width: 140px;">
  <%= link_to "Edit Info", edit_contest_path(@contest.path), 
      class: "btn btn-warning btn-block" %>
  <%= link_to 'Destroy Contest', contest_path(@contest.path), 
      method: :delete,
      confirm: 'Are you sure?',
      class: "btn btn-danger btn-block" %>
</div>

<div style="width: 550px; left: 220px; top:-123px; position: relative;" id="control-starter">
  <%= render 'contest_info' %>

  <%= form_for(@contest, :url => contest_path(@contest.path)+'/control', :method => "PUT") do |f| %>
    <table class="table table-bordered" style="width: 500px">
      <tr>
        <td>
          <div style="position: relative; left: 180px;">
            <% if @contest.over? then %>
              <%= label_tag :duration, "Continue or Restart for" %>
            <% else %>
              <%= label_tag :duration, "Contest duration" %> 
            <% end %>

            <%= f.number_field :duration, :in => 1..30000000, :style => "width: 85px;" %> Minute
          </div>
        </td>
      </tr>

      <tr style="text-align: center;">
        <td style="width: 250px">
          <p>Start time</p>
          <%= f.datetime_select :time_start %>
          <%= f.submit 'Update', :class => "btn", :style => "top:-4px; left:21px; position:relative;"%>
        </td>
        <td>
          <br />
          <br />
          <center>OR<center>
        </td>
        <td style="width: 200px; text-align: center;">
          <% if not @contest.started? then %>
            <p>Start now</p>
            <%= f.submit 'Start', :class => "btn" %>
          <% elsif @contest.over? then %>
            <p>Continue or Restart now</p>
            <%= f.submit 'Continue', :class => "btn btn-block btn-primary" %>          
            <%= f.submit 'Restart', :class => "btn btn-block" %>
          <% else %>
            <p>Stop it</p>
            <%= f.submit 'Stop', :class => "btn btn-danger" %>
          <% end %>        
        </td>
      </tr>

    </table>
  <% end %>

</div>


<div class="well" style="width: 140px; top: -380px; position: relative; float: right;">
  <%= link_to "Edit Problems", contest_path(@contest.path)+'/control_problems', 
      class: "btn btn-block" %>
  <%= link_to "Edit Participants", contest_path(@contest.path)+'/control_participants', 
      class: "btn btn-block" %>
  <%= link_to "Submits status", contest_path(@contest.path)+'/control_status', 
      class: "btn btn-block btn-primary" %>
</div>


<% if @contest.ioi? %>
  <div class="well" style="width: 140px; top: -220px; left: 180px; position: relative; float: right;">
    <%= form_tag(control_ioi_path(@contest.path), :method => "PUT") do %>
      <legend>IOI Settings</legend>
      <%= label_tag :submit_limit, "submit attempts" %>
      <%= number_field_tag :submit_limit, @contest.submit_limit, :class => "input-mini" %>

      <%= label_tag :full_feedback, "Full feedback" %>
      <div class="switch switch-small">
        <%= check_box_tag :full_feedback, "true", @contest.full_feedback %>
      </div>
      <hr />
    <%= submit_tag 'Update', :class => "btn" %>
    <% end %>
  </div>
<% end %>