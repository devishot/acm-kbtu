<%= link_to '<i class="icon-arrow-left"></i> Back'.html_safe, contests_path %>
<br />
<br />

<%= link_to '<i class="icon-wrench icon-white"></i> Control panel'.html_safe, contest_path(@contest.path)+'/control', class: "btn btn-inverse" %>
<br />
<br />

<div id="body-bgcolor">
  <p>
    <b>Title:</b>
    <%= @contest.title %>
  </p>

  <p>
    <b>Description:</b>
    <%= @contest.description %>
  </p>

  <p>
    <b>Type:</b>
    <%= (@contest.type==0) ? "ACM" : "IOI" %>
  </p>

  <p>
    <b>problems_type:</b>
    <%= (@contest.problems_upload==0) ? "one_archive" : "every_problem" %>
  </p>

  <p>
    <b>Start:</b>
    <%= (@contest.time_start.nil?) ? 'Not started' :  @contest.time_start.strftime("%Y-%m-%d %H:%M") %>
  </p>

  <p>
    <b>Duration:</b>
    <%= @contest.duration %>
  </p>


  <% if (current_user.participants.where(contest: @contest).count == 0) then %>
    <%= link_to "Participate", contest_path(@contest.path) + "/participate", :method => :post, :class => "btn btn-primary"%>
  <% end %>


  <ul class="nav nav-pills">
    <li <%= "class=active" if @navpill==1 %> > 
      <%= link_to "Problems", "/contests/#{@contest.path}/problems" %>
    </li>

    <li <%= "class=active" if @navpill==2 %> > 
      <%= link_to "Standings", "/contests/#{@contest.path}/standings" %>
    </li>

    <li <%= "class=active" if @navpill==3 %> > 
      <%= link_to "Messages", "/contests/#{@contest.path}/messages" %>
    </li>

    <li <%= "class=active" if @navpill==4 %> > 
      <%= link_to "Summary", "/contests/#{@contest.path}/summary" %>
    </li>
  </ul>

</div>