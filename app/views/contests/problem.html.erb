<h3>Submit solutions</h3>
<br />

<%= form_tag({:action => :solution, :method => "post"}) do %>
  <%= hidden_field_tag :contest_id, @contest.path %>

  <div class="control-group">
    <%= label_tag :problems_count, nil, :class => 'control-label' %>
    <div class="controls">
      <%= number_field_tag :problems_count, 0, :in => 0..200 %>
    </div>
  </div>

  <%= file_field_tag 'archive' %>

  <br />
  <br />

  <%= submit_tag("Upload", :class => "btn") %>
<% end %>

<%= link_to 'Back', contests_path %>
