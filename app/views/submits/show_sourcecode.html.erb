<%= render "contests/contest" %>


<%= link_to '<i class="icon-download-alt"></i> Sourcecode'.html_safe, 
    submit_path(@participant.contest.path)+"/#{@submit.problem.order}/#{@order}/download",
    :class => 'btn' %> 
<br />
<br />

<% line_num=0 %>
<% text=File.open(@submit.file_sourcecode_path, "r").read %>
<% text.gsub!(/\r\n?/, "\n") %>

<pre>
  <code class="cpp">  
    <% text.each_line do |line| %>
      <%= line %> <!-- "#{line_num += 1} #{line}" -->
    <% end %>
  </code>
</pre>
<br />