<div style="background-color: white;">
  <%= render 'layouts/header' %>

  <div id="articles">
    <article>

      <header>
        <h3>
          <%= @page.text_title %>
        </h3>

        <div class="article-author">
          Submitted by <%= @page.user.name %> on <%= @page.created_at.to_s(:long) if !@page.created_at.nil? %>
        </div>

        <hr />
      </header>

      <p>
        <%= @page.text_body.html_safe %>
      </p>

      <%= link_to 'DESTROY', '/pages/'+@page.node.path+'/'+@page.path+'/destroy' %> |
      <%= link_to 'Edit', '/pages/'+@page.node.path+'/'+@page.path+'/edit' %> |
      <%= link_to 'Back', :back %>
    </article>
    <br />
  </div>
</div>