<h2>Listing nodes</h2>
<%= link_to 'New Node', new_node_path, :class => "btn btn-primary" %>

<br />
<br />

<div class="well">
  
  <% if can? :manage, Node %>
    <button id="sortable_button">Save</button>
    
  <% end %>

  <table class="table">
    <thead>
      <tr>
        <th style="width: 40%;">Name</th>
        <th style="width: 30%;">Path</th>
        <th style="width: 20%;">Pages</th>
        <th style="width: 36px;"></th>
      </tr>
    </thead>

    <tbody id="sortable">
      <% @nodes.each do |node| %>
        <tr class="child" id="<%= node.path %>">
          <td> <%= node.name %> </td>
          <td> <%= node.path %> </td>
          <td> <%= node.pages.count %> </td>
          <td>
              <%= link_to "", edit_node_path(node), :class=>"icon-pencil" %>
              <%= link_to "", node, method: :delete, confirm: 'Are you sure?', :class => "icon-trash" %>
          </td>
        </tr>
      <% end %>
    </tbody>

  </table>
</div>